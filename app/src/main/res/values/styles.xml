<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Toolbar title style -->
    <style name="LogoTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/amatic_r</item>
        <item name="android:textSize">62sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Toolbar title style -->
    <style name="ToolbarTitle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/coming_soon_font</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- button style -->
    <style name="buttonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">@dimen/general_margin_dimen</item>
        <item name="android:paddingStart">@dimen/general_margin_dimen</item>
        <item name="android:paddingEnd">@dimen/general_margin_dimen</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
        <item name="android:drawableTint">@color/colorBackgroundWhite</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <!-- Toolbar title style -->
    <style name="BodyTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/coming_soon_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <!-- Toolbar title style -->
    <style name="ActionStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/coming_soon_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">@color/colorFacebookBlue</item>
    </style>
</resources>
